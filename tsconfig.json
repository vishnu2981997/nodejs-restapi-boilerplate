{
    "compilerOptions": {
        "target": "es6",
        "strict": false,
        "allowJs": true,
        "importHelpers": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist/src",
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["es7"],
        "preserveSymlinks": true
    },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
